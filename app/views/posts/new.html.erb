

<header>
    <%= link_to 'Back', root_path %>
    <% if logged_in? %>
      	Hey <%= link_to current_user.name, current_user %>!
      	<%= link_to 'Logout', log_out_path, :method => :delete %>
    <% else %>
      	<%= link_to 'Login', log_in_path %>
      	<%= link_to 'Signup', new_user_path %>
    <% end %>
</header>

<div class="container">
	<div class="row">
		<div id="new" class="col-md-4 offset-md-4">
			<h1>New post</h1>

			<%= render 'form' %>
		</div>
	</div>
</div>
