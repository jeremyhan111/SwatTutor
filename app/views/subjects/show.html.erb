<% if logged_in? %>
  <%= 'Hey ' + current_user.name %>!
<%= link_to 'Logout', log_out_path, :method => :delete %>
<% else %>
<%= link_to 'Login', log_in_path %>
<%= link_to 'Signup', new_user_path %>
<% end %>

<p>
  <strong>Subject:</strong>
  <%= @subject.name %>
</p>

<table>
  <thead>
    <tr>
      <th>Tutoring Offers</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subject.posts.each do |post| %>
      <tr>
        <% if post.user.category == 'Tutor'%>
        <td><%= link_to post.title, subject_post_path(@subject, post) %></td>
        <td><%= post.created_at%>
        <% if logged_in? && post.user == current_user %>
        <td><%= link_to 'Edit Post', edit_subject_post_path(@subject, post) %></td>
        <td><%= link_to 'Destroy Post', subject_post_path(@subject, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

