<% if logged_in? %>
  <%= 'Hey ' + current_user.name %>!
<%= link_to 'Logout', log_out_path, :method => :delete %>
<% else %>
<%= link_to 'Login', log_in_path %>
<%= link_to 'Signup', new_user_path %>
<% end %>
<h1>Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= link_to subject.name, subject %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', root_path %>
