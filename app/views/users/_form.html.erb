<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.radio_button(:year, "Freshman") %>
    <%= f.label(:year, "Freshman") %>
    <%= f.radio_button(:year, "Sophomore") %>
    <%= f.label(:year, "Sophomore") %>
    <%= f.radio_button(:year, "Junior") %>
    <%= f.label(:year, "Junior") %>
    <%= f.radio_button(:year, "Senior") %>
    <%= f.label(:year, "Senior") %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.radio_button(:category, "Tutor") %>
    <%= f.label(:category, "Tutor") %>
    <%= f.radio_button(:category, "Tutee") %>
    <%= f.label(:category, "Tutee") %>
  </div>
  <div class="field">
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
  </div>
  <div class="field">
    Upload a profile picture! 
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
